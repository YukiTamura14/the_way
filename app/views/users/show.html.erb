<div>
  <h3><%= @user.name %>のページ</h3>
  <p>メールアドレス:<%= @user.email %></p>
  <%= image_tag(@user.icon.url) if @user.icon.url.present? %>
  <% if logged_in? %>
    <p><%= link_to '一覧を表示する', concerns_path %></p>
  <% else %>
    <p>get the way YOU THINKに参加する？<%= link_to "ログインしてください。", new_session_path %></p>
  <% end %>
</div>
<div>
  <% @concerns.each do |concern| %>
    <%= image_tag(concern.concern.image.url) if concern.concern.image.url.present? %>
    <p><%= concern.user.name %></p>
    <p><%= concern.concern.title %></p>
    <p><%= concern.concern.content %></p>
    <%= link_to 'お気に入りを解除する。', favorite_path(id: concern.id), method: :delete %>
  <% end %>
</div>
